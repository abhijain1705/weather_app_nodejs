<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/app.css">
    <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" data-auto-replace-svg="nest"></script>
    <title>weather web</title>
</head>

<body>
    <div class="box">
        <form action="/" method="post">
            <input type="text" name="cityName" placeholder="Search weather in your city.">
            <button type="submit">Go</button>
        </form>
        <div class="wave -one"></div>
        <div class="wave -two"></div>
        <div class="wave -three"></div>
        <div id="weathercon">
            <img src="<%= imgSrc %>" alt="">
        </div>
        <div class="info">
            <h2 class="location"><i class="fas fa-street-view"></i><%= city %>, <%= country %></h2>
            <p id="date">WED | OCT 23 | 10:49AM</p>
            <h1 class="temp"><%= temperature %></h1>
        </div>
    </div>

    <script>
        const curDate = document.getElementById("date")
        let weathercon = document.getElementById("weathercon")

        const tempStatus = "Clouds"

        const getCurrentDay = () => {
            var days = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday'];

            let currentTime = new Date()
            let day = days[currentTime.getDay()]
            return day
        }

        const getCurrentTime = () => {
            var months = ["Jan", "Feb", "Mar", "Apr", "May", "June", "July", "Aug", "Sep", "Oct", "Nov", "Dec"]
            var now = new Date();
            var month = months[now.getMonth() + 1];
            var date = now.getDate();

            let hours = now.getHours()
            let mins = now.getMinutes()

            let periods = "AM"

            if (hours > 11) {
                periods = "PM"
                if (hours > 12) hours -= 12
            }

            if (mins < 10) {
                mins = "0" + mins
            }
            return `${month} ${date} |  ${hours} : ${mins}${periods}`
        }
        curDate.innerHTML = getCurrentDay() + "|" + getCurrentTime()
    </script>
</body>

</html> 